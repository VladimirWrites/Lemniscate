<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stroke_width"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <SeekBar
            android:id="@+id/seekBarStrokeWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textStrokeWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/stroke_width"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/divider"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stroke_color"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/viewColor1"
                android:layout_width="@dimen/view_color_picker"
                android:layout_height="@dimen/view_color_picker"
                android:layout_margin="@dimen/margin_small"
                android:background="@color/picker_color_1"/>

            <View
                android:id="@+id/viewColor2"
                android:layout_width="@dimen/view_color_picker"
                android:layout_height="@dimen/view_color_picker"
                android:layout_margin="@dimen/margin_small"
                android:background="@color/picker_color_2"/>

            <View
                android:id="@+id/viewColor3"
                android:layout_width="@dimen/view_color_picker"
                android:layout_height="@dimen/view_color_picker"
                android:layout_margin="@dimen/margin_small"
                android:background="@color/picker_color_3"/>

            <View
                android:id="@+id/viewColor4"
                android:layout_width="@dimen/view_color_picker"
                android:layout_height="@dimen/view_color_picker"
                android:layout_margin="@dimen/margin_small"
                android:background="@color/picker_color_4"/>

            <View
                android:id="@+id/viewColor5"
                android:layout_width="@dimen/view_color_picker"
                android:layout_height="@dimen/view_color_picker"
                android:layout_margin="@dimen/margin_small"
                android:background="@color/picker_color_5"/>

            <View
                android:id="@+id/viewColor6"
                android:layout_width="@dimen/view_color_picker"
                android:layout_height="@dimen/view_color_picker"
                android:layout_margin="@dimen/margin_small"
                android:background="@color/picker_color_6"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/divider"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/line_min_length"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <SeekBar
            android:id="@+id/seekBarMinLineLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textMinLineLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            tools:text="0.4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/line_max_length"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <SeekBar
            android:id="@+id/seekBarMaxLineLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textMaxLineLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            tools:text="0.8" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/divider"/>

        <CheckBox
            android:id="@+id/checkBoxHasHole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/has_hole"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/divider"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/size_multiplier"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <SeekBar
            android:id="@+id/seekBarSizeMultiplier"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textSizeMultiplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            tools:text="1.0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/divider"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <SeekBar
            android:id="@+id/seekBarAnimationDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textAnimationDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            tools:text="1000ms" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/divider"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/precision"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <SeekBar
            android:id="@+id/seekBarPrecision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textPrecision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:gravity="center"
            android:text="@string/stroke_width"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/divider"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/param_a"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <SeekBar
            android:id="@+id/seekBarA"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/param_b"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <SeekBar
            android:id="@+id/seekBarB"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/param_d"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <SeekBar
            android:id="@+id/seekBarD"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/divider"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_cycles"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        <SeekBar
            android:id="@+id/seekBarNumberOfCycles"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />

    </LinearLayout>
</ScrollView>
